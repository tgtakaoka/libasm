# List of architectures.
ARCHS = \
	cdp1802  \
	f3850    \
	i8048    \
	i8051    \
	i8080    \
	i8086    \
	i8096    \
	ins8060  \
	ins8070  \
	mc6800   \
	mc68000  \
	mc6805   \
	mc6809   \
	mn1610   \
	mos6502  \
	ns32000  \
	scn2650  \
	tlcs90   \
	tms32010 \
	tms9900  \
	z8       \
	z80      \
	z8000

# define OBJS_arch variable which contains architecture related objects.
define objs-arch # arch
OBJS_$(1) = table_$(1).o reg_$(1).o text_$(1).o

endef
$(eval $(foreach a,$(ARCHS),$(call objs-arch,$(a))))

# target list for each architecture.
TGT_mc6809  = mc6809 hd6309
TGT_mc6800  = mc6800 mb8861 mc6801 mc68hc11 hd6301
TGT_mc6805  = mc68hc05
TGT_mos6502 = mos6502 g65sc02 r65c02 w65c02s w65c816
TGT_i8048   = i8039 i8048 i80c39 i80c48 msm80c39 msm80c48
TGT_i8051   = i8051
TGT_i8080   = i8080 i8085 v30emu
TGT_i8096   = i8096
TGT_z80     = z80 i8080_z80syn i8085_z80syn v30emu_z80syn
TGT_z8      = z8 z86c z88
TGT_tlcs90  = tlcs90
TGT_ins8060 = ins8060
TGT_ins8070 = ins8070
TGT_cdp1802 = cdp1802 cdp1804 cdp1804a
TGT_scn2650 = scn2650
TGT_f3850   = f3850
TGT_i8086   = i8086 i80186 v30
TGT_tms9900 = tms9900 tms9995 tms99105
TGT_tms32010= tms32010
TGT_mc68000 = mc68000
TGT_z8000   = z8001 z8002 z8k1 z8k2
TGT_ns32000 = ns32000 ns32k
TGT_mn1610  = mn1610 mn1613

# CPU for each target
CPU_mc6809   = 6809
CPU_hd6309   = 6309
CPU_mc6800   = 6800
CPU_mb8861   = mb8861
CPU_mc6801   = 6801
CPU_mc68hc11 = 6811
CPU_hd6301   = 6301
CPU_mc68hc05 = 68hc05
CPU_mos6502  = 6502
CPU_g65sc02  = 65SC02
CPU_r65c02   = 65C02
CPU_w65c02s  = W65C02S
CPU_w65c816  = 65816
CPU_i8039    = 8039
CPU_i8048    = 8048
CPU_i80c39   = 80c39
CPU_i80c48   = 80c48
CPU_msm80c39 = msm80c39
CPU_msm80c48 = msm80c48
CPU_i8051    = 8051
CPU_i8080    = 8080
CPU_i8085    = 8085
CPU_v30emu   = V30EMU
CPU_i8096    = 8096
CPU_z80      = Z80
CPU_i8080_z80syn = 8080
CPU_i8085_z80syn = 8085
CPU_v30emu_z80syn = V30EMU
CPU_z8       = Z8601
CPU_z86c     = Z86C40
CPU_z88      = Z88C00
CPU_tlcs90   = TLCS90
CPU_ins8060  = SC/MP
CPU_ins8070  = 8070
CPU_cdp1802  = 1802
CPU_cdp1804  = 1804
CPU_cdp1804a = 1804A
CPU_scn2650  = 2650
CPU_f3850    = F3850
CPU_i8086    = 8086
CPU_i80186   = 80186
CPU_v30      = V30
CPU_tms9900  = TMS9900
CPU_tms9995  = TMS9995
CPU_tms99105 = TMS99105
CPU_tms32010 = 32010
CPU_mc68000  = 68000
